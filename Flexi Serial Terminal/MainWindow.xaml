<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flexi_Serial_Terminal"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
		TextElement.FontSize="14px"
        x:Class="Flexi_Serial_Terminal.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<StackPanel Orientation="Vertical">
			<TextBlock Text="Poll commands &amp; values" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"
			           FontSize="20" FontWeight="Bold" />
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" MinWidth="55px" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Row="0" Grid.Column="0" Text="Enabled" HorizontalAlignment="Center" Margin="5,7.137"
				           VerticalAlignment="Center" />
				<TextBlock Grid.Row="0" Grid.Column="1" Text="Polling Command" HorizontalAlignment="Center" Margin="5,7.137"
				           VerticalAlignment="Center" />
				<TextBlock Grid.Row="0" Grid.Column="2" Text="Value" HorizontalAlignment="Center" Margin="4.999,7.137,5,7.137"
				           VerticalAlignment="Center" />
				<TextBlock Grid.Row="0" Grid.Column="4" Text="Save file (CSV)" HorizontalAlignment="Left" Margin="5"
				           VerticalAlignment="Center" />
				<CheckBox Grid.Row="1" Grid.Column="0" x:Name="P1_Enabled" Content="" HorizontalAlignment="Center" Margin="5"
				          VerticalAlignment="Center" />
				<TextBox Grid.Row="1" Grid.Column="1" x:Name="P1_Command" Margin="5" TextWrapping="Wrap" VerticalAlignment="Center" />
				<TextBlock Grid.Row="1" Grid.Column="2" x:Name="P1_Value" HorizontalAlignment="Center" Margin="5.329,5,5.33,5"
				           VerticalAlignment="Center" Text="Label" />
				<Button Grid.Row="1" Grid.Column="3" x:Name="P1_BrowseFile" Content="Browse file" HorizontalAlignment="Center"
				        Margin="5" VerticalAlignment="Center" Height="Auto" />
				<TextBlock Grid.Row="1" Grid.Column="4" x:Name="P1_File" Text="Label" Margin="5" VerticalAlignment="Center" />
				<CheckBox Grid.Row="2" Grid.Column="0" x:Name="P2_Enabled" Content="" HorizontalAlignment="Center" Margin="5"
				          VerticalAlignment="Center" />
				<TextBox Grid.Row="2" Grid.Column="1" x:Name="P2_Command" Margin="5" TextWrapping="Wrap" VerticalAlignment="Center" />
				<TextBlock Grid.Row="2" Grid.Column="2" x:Name="P2_Value" HorizontalAlignment="Center" Margin="5.329,5,5.33,5"
				           VerticalAlignment="Center" Text="Label" />
				<Button Grid.Row="2" Grid.Column="3" x:Name="P2_BrowseFile" Content="Browse file" HorizontalAlignment="Center"
				        Margin="5" VerticalAlignment="Center" Height="Auto" />
				<TextBlock Grid.Row="2" Grid.Column="4" x:Name="P2_File" Text="Label" Margin="5" VerticalAlignment="Center" />
				<CheckBox Grid.Row="3" Grid.Column="0" x:Name="P3_Enabled" Content="" HorizontalAlignment="Center" Margin="5"
				          VerticalAlignment="Center" />
				<TextBox Grid.Row="3" Grid.Column="1" x:Name="P3_Command" Margin="5" TextWrapping="Wrap" VerticalAlignment="Center" />
				<TextBlock Grid.Row="3" Grid.Column="2" x:Name="P3_Value" HorizontalAlignment="Center" Margin="5.329,5,5.33,5"
				           VerticalAlignment="Center" Text="Label" />
				<Button Grid.Row="3" Grid.Column="3" x:Name="P3_BrowseFile" Content="Browse file" HorizontalAlignment="Center"
				        Margin="5" VerticalAlignment="Center" Height="Auto" />
				<TextBlock Grid.Row="3" Grid.Column="4" x:Name="P3_File" Text="Label" Margin="5" VerticalAlignment="Center" />
				<CheckBox Grid.Row="4" Grid.Column="0" x:Name="P4_Enabled" Content="" HorizontalAlignment="Center" Margin="5"
				          VerticalAlignment="Center" />
				<TextBox Grid.Row="4" Grid.Column="1" x:Name="P4_Command" Margin="5" TextWrapping="Wrap" VerticalAlignment="Center" />
				<TextBlock Grid.Row="4" Grid.Column="2" x:Name="P4_Value" HorizontalAlignment="Center" Margin="5.329,5,5.33,5"
				           VerticalAlignment="Center" Text="Label" />
				<Button Grid.Row="4" Grid.Column="3" x:Name="P4_BrowseFile" Content="Browse file" HorizontalAlignment="Center"
				        Margin="5" VerticalAlignment="Center" Height="Auto" />
				<TextBlock Grid.Row="4" Grid.Column="4" x:Name="P4_File" Text="Label" Margin="5" VerticalAlignment="Center" />
			</Grid>
			<Grid Margin="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock HorizontalAlignment="Right" Margin="5" TextWrapping="Wrap" Text="Polling timeout(ms):" VerticalAlignment="Center"/>
				<local:NumericSpinner Grid.Column="1" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center" Value="60" Decimals="0" MinValue="0" MinWidth="50"/>
			</Grid>
		</StackPanel>
	</Grid>
</Window>